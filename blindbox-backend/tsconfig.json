{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,  // 配合 esModuleInterop 使用
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "./typings", "src/typings","./node_modules/@types"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@midwayjs/decorator": ["./node_modules/@midwayjs/decorator"]
    },
  },
  "types": ["@midwayjs/koa", "node"],
  "exclude": [
    "*.js",
    "*.ts",
    "dist",
    "node_modules",
    "test"
  ]
}
